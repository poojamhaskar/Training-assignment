#include<stdio.h>
#include<conio.h>

 int main()  
{  
    int n=6;  

    for(int i=0;i<=n;i++)  
    {  
        for(int j=0;j<=n;j++)  
        {  
            if(i==0 ||i==6||j==0||j==6)  
            {  
            printf("*");  
            }  
            else  
            printf(" ");  
        }  
        printf("\n");  
    }  
      
    return 0;  
}  

**************Output*******************

*******                                                                                                                                                
*     *                                                                                                                                                
*     *                                                                                                                                                
*     *                                                                                                                                                
*     *                                                                                                                                                
*     *                                                                                                                                                
*******
